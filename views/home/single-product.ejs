                        modal.style.display = "none"; // Ẩn modal
                    }
                }

                function truncateText(element, maxLength) {
                    var text = element.innerHTML;
                    if (text.length > maxLength) {
                        element.innerHTML = text.substring(0, maxLength) + "...";
                    }
                }

                var productInfoElement = document.getElementById("ttin");
                truncateText(productInfoElement, 330); // Giới hạn 100 ký tự

                const pricestrongInitialValue = document.querySelector('.pricestrong').textContent.trim();
                const pricestrongInitialValue2 = document.querySelector('.pricemobile2').textContent.trim();
                document.querySelectorAll('.inputloai').forEach(item => {
                    item.addEventListener('click', function() {
                        // Loại bỏ chọn các checkbox khác
                        document.querySelectorAll('.inputloai').forEach(otherCheckbox => {
                            if (otherCheckbox !== this) {
                                otherCheckbox.checked = false;
                            }
                        });

                        const price = parseFloat(this.getAttribute('data-price'));
                        const index = this.getAttribute('data-index');
                        const pricestrong = document.querySelector('.pricestrong');
                        const pricestrong2 = document.querySelector('.pricemobile2');
                        const priceElement = document.querySelector(`.price${index}`);
                        const priceValue = priceElement.textContent.trim();

                        if (this.checked) {
                            pricestrong.textContent = priceValue;
                            pricestrong2.textContent = priceValue;
                        } else {
                            // Khôi phục giá trị ban đầu của pricestrong
                            pricestrong.textContent = pricestrongInitialValue;
