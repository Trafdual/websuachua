<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vui chơi có thưởng</title>
    <link rel="stylesheet" href="http://localhost:3000/css/gift.css" />
    <style>
        /* CSS cho form đăng nhập */
        
        .login-form {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            width: 30%;
            border-radius: 15px;
        }
        
        .login-form h2 {
            margin-top: 0;
        }
        
        .login-form input {
            margin-bottom: 10px;
            padding: 8px;
            width: 100%;
            margin-top: 10px;
            border: 1px solid #a0a0a0;
            font-size: 20px;
            border-radius: 10px;
        }
        
        .login-form button {
            padding: 10px;
            background-color: #ff2205;
            color: #fff;
            border: none;
            cursor: pointer;
            width: 100%;
            text-align: center;
        }
        
        .login-form button:hover {
            background-color: #bb0000;
        }
        
        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }
        
        .modal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            width: 80%;
            max-width: 400px;
            border-radius: 15px;
            text-align: center;
        }
        
        .modal button {
            padding: 10px;
            background-color: #ff2205;
            color: #fff;
            border: none;
            cursor: pointer;
            width: 100%;
            text-align: center;
            margin-top: 10px;
        }
        
        .modal button:hover {
            background-color: #bb0000;
        }
        
        #thuong {
            display: none;
        }
    </style>
</head>

<body>

    <div class="overlay"></div>

    <div class="login-form">
        <h2>Đăng nhập</h2>
        <form id="loginForm">
            <input type="text" name="tenkhach" placeholder="Nhập tên của bạn" required>
            <input type="text" name="email" placeholder="Nhập email của bạn" required>
            <input type="text" name="phone" placeholder="Số điện thoại" required>
            <input type="text" name="address" placeholder="Địa chỉ" required>
            <h2 class="text-black mt-4 mb-3">Thông tin sản phẩm
            </h2>
            <input type="text" name="tensp" placeholder="Tên sản phẩm" required>
            <input type="text" name="price" placeholder="Giá" required>
            <button type="submit" id="btnlogin">Đăng nhập</button>
        </form>
    </div>

    <div class="modal" id="errorModal">
        <p id="error-message"></p>
        <button id="modalCloseButton">Đóng</button>
    </div>

    <main>
        <h1 class="lll">VÒNG QUAY MAY MẮN</h1>
        <section class="main">
            <span>
                <ul class="wheel"></ul>
            </span>
            <div class="row">
                <button class="btn--wheel" id="thuong">Quay thưởng</button>
                <button class="btn--wheel" id="btn2">Quay thưởng</button>
                <button class="btn--wheel" id="thu">Quay thử</button>
            </div>
        </section>
    </main>

    <script src="http://localhost:3000/js/gift1.js"></script>
    <script>
        document.getElementById('btn2').addEventListener('click', function() {
            document.querySelector('.login-form').style.display = 'block';
            document.querySelector('.overlay').style.display = 'block';
        });

        document.querySelector('.overlay').addEventListener('click', function() {
            document.querySelector('.login-form').style.display = 'none';
            document.querySelector('.overlay').style.display = 'none';
        });

        document.getElementById('loginForm').addEventListener('submit', function(event) {
            event.preventDefault();

            // Lấy dữ liệu từ form
            const formData = new FormData(event.target);
            const data = Object.fromEntries(formData.entries());

            fetch('/postnotify1', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data),
                })
                .then(response => response.json())
                .then(data => {
                    if (data.message === 'thành công') {
                        document.querySelector('.login-form').style.display = 'none';
                        document.querySelector('.overlay').style.display = 'none';
                        document.getElementById('thuong').style.display = 'block';
                        document.getElementById('btn2').style.display = 'none';
                        document.getElementById('thu').style.display = 'none';
                    }
                    if (data.message === 'chờ duyệt') {
                        document.getElementById('error-message').textContent = 'Đăng ký của quý khách đang chờ duyệt xin vui lòng đợi trong giây lát';
                        document.getElementById('errorModal').style.display = 'block';
                    }
                    if (data.message === 'hết lượt') {
                        document.getElementById('error-message').textContent = 'Qúy khách đã hết lượt quay';
                        document.getElementById('errorModal').style.display = 'block';
                    }
                    if (data.message === 'chờ phê duyệt') {
                        document.getElementById('error-message').textContent = 'Tài khoản của quý khách đang chờ duyệt';
                        document.getElementById('errorModal').style.display = 'block';
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    document.getElementById('error-message').textContent = 'Đã xảy ra lỗi: ' + error.message;
                    document.getElementById('errorModal').style.display = 'block';
                });
        });

        document.getElementById('modalCloseButton').addEventListener('click', function() {
            document.getElementById('errorModal').style.display = 'none';
        });
    </script>
</body>

</html>